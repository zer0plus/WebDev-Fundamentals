html 
    head 
        Title MMDB - Example Movie
    style
        include view_css/movie.css
    body
        include ../views/partial/header
        br
        h2 #{movie.Title} , #{movie.Year} 
            button(class="addToList") Add to Watched List
        //- br
        p Runtime: #{movie.Runtime}
        p Average Rating: 8/10
        p Plot: #{movie.Plot}
        p  Genre: 
            each genre in movie.Genre
                a(href='/searchresults') #{genre}
                span    
                span | 

        h4 Similar Movies: 
            br
            a(href='/movies/exampleMovie') Margin Call 
            br
            a(href='/movies/exampleMovie') The Big Short
            br
            a(href='/movies/exampleMovie') Boiler Room
            br
            a(href='/movies/exampleMovie') Casino
        
        h4 Directors:
            br
            a(href='/people/examplePerson') #{movie.Director}
            br

        h4 Writers: 
            br
            each writer in movie.Writer
                a(href='/people/examplePerson') #{writer} 
                br

            
        h4 Actors: 
            br
            each actor in movie.Actors
                a(href='/people/examplePerson') #{actor}
                br
            
        h4 Reviews: 
            br
        p 9/10 - Very funny   
            a(href='/reviews/exampleReview')    View Details
        p 8/10 - Very Interesting    
            a(href='/reviews/exampleReview')    View Details

        h4 Add a review: 
        p Review Score: 
            input(type="text", class ="score")  
            span   
            button  Submit basic Review  
        p Full Review Text: 
            input(type ="text" class="r_text") 
            button  Submit Review

        

        include ../views/partial/footer
        